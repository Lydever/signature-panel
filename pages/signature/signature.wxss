page{
  position: relative;
  background-color: #eeeeee;
  /* background-image: url('http://pic.51yuansu.com/backgd/cover/00/03/02/5b5861b90f25f.jpg!/fw/780/quality/90/unsharp/true/compress/true'); */
  width: 100%;
  height: 100%;
}
canvas{
  width: 100%;
  height: 100vh;
}

.handle{
  position: sticky;
  bottom: 70rpx;
  width: 90%;
  height: 80rpx;
  margin: 0 auto;
}

.btn-reset,.btn-confirm,.btn-preview{
  width: 160rpx;
  float: left;
  text-align: center;
  border: 1rpx solid #1983e9;
  color: #1983e9;
  font-size: 22rpx;
  height: 60rpx;
  border-radius: 8rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  margin: 30rpx;
}
.btn-confirm{
  background-color: #1983e9;
  border: 1rpx solid #1983e9;
  color: #fff;
}

